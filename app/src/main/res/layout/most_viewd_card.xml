<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/mv_image"
            android:scaleType="centerCrop"
            android:src="@drawable/java_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mv_image"
            android:id="@+id/mv_title"
            android:fontFamily="@font/chewy"
            android:textSize="22sp"
            android:textColor="@color/text_color"
            android:text="Java Exercise"/>
        <TextView
            android:id="@+id/mv_free"
            android:text="Free"
            android:layout_below="@+id/mv_title"
            android:layout_toRightOf="@+id/mv_image"
            android:fontFamily="@font/caveat_bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Some of the exercise related to java"
            android:layout_toRightOf="@+id/mv_image"
            android:layout_below="@+id/mv_free"
            android:id="@+id/mv_decp"
            android:fontFamily="@font/caveat_bold"
            android:textColor="@color/text_color"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>